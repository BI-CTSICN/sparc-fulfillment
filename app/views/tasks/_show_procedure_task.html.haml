.modal-dialog
  .modal-content
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only= t(:actions)[:close]
      %h4.modal-title.text-center= t(:task)[:object]
    .modal-body
      %dl.dl-horizontal
        %dt
          = t(:task)[:user_name]
        %dd
          = task.user.full_name
        %dt
          = t(:task)[:assignee_name]
        %dd
          = task.assignee.full_name
        %dt
          = t(:task)[:assignable_type]
        %dd
          = task.assignable_type
        %dt
          = t(:task)[:due_at]
        %dd
          = format_date(task.due_at)
        %dt
          = t(:task)[:completed]
        %dd
          = task.complete
        %dt
          = t(:participant)[:full_name]
        %dd
          = task.assignable.participant.full_name
        %dt
          = t(:protocol)[:object]
        %dd
          = task.assignable.protocol.short_title
        %dt
          = t(:visit)[:object]
        %dd
          = task.assignable.visit_group.name
        %dt
          = t(:arm)[:object]
        %dd
          = task.assignable.arm.name
        %dt
          = t(:procedure)[:object]
        %dd
          = task.assignable.service_name
      %dl.dl-horizontal
        %dt
          = t(:task)[:object]
        %dd
          = task.body
    .modal-footer
      .center-block
        %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
          = t(:actions)[:close]
