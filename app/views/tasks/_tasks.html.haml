%h1 Task List
.bootstrap-table-dropdown-overflow
  #custom_tool_buttons
    = link_to t(:actions)[:new_task], new_task_path, {class: 'btn btn-default btn-primary', id: 'new_task_button', type: 'button', data: {toggle: 'modal', target: '#modal_place'}, remote: true}
    = link_to t(:task_index)[:completed_tasks_header], completed_tasks_tasks_path, {class: 'btn btn btn-success', id: "completed_tasks_button", value: "completed_tasks", type: "button", data: {toggle: 'modal', target: '#modal_place'}, remote: true }
%table.tasks.custom_striped{style: "padding: 0px 0px;",id: "task-list", data: {toggle: 'table', search: "true", "show-columns" => "true", "show-refresh" => "true", "show-toggle" => "true", url: "/tasks.json", "sort-name" => "due_date", "sort-order" => 'asc', striped: "true", toolbar: "#custom_tool_buttons"}}
  %thead
    %tr
      %th{data: {class: 'user_name', align: 'left', sortable: "true", field: 'user_name'}}= t(:task_index)[:user_name]
      %th{data: {class: 'task_type', align: 'left', sortable: "true", field: 'task_type'}}= t(:task_index)[:task_type]
      %th{data: {class: 'participant_name', align: 'left', sortable: "true", field: 'participant_name'}}= t(:task_index)[:participant_name]
      %th{data: {class: 'protocol_id', align: 'center', sortable: "true", field: 'protocol_id'}}= t(:task_index)[:protocol_id]
      %th{data: {class: 'visit_name', align: 'left', sortable: "true", field: 'visit_name'}}= t(:task_index)[:visit_name]
      %th{data: {class: 'arm_name', align: 'left', sortable: "true", field: 'arm_name'}}= t(:task_index)[:arm_name]
      %th{data: {class: 'task', align: 'left', sortable: "true", field: 'task'}}= t(:task_index)[:task]
      %th{data: {class: 'assignee_name', align: 'left', sortable: "true", field: 'assignee_name'}}= t(:task_index)[:assignee_name]
      %th{data: {class: 'due_date', align: 'left', sortable: "true", field: 'due_date'}}= t(:task_index)[:due_date]
      %th{data: {class: 'is_complete', align: 'center', field: 'is_complete'}}= t(:task_index)[:completed]
      %th{data: {class: 'reschedule', align: 'center', field: 'reschedule', formatter: "rescheduleFormatter", width: "5"}}= t(:task_index)[:reschedule]


