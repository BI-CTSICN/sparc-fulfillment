.modal-dialog
  .modal-content
    = form_for task, {remote: true, html: {class: "form-horizontal", role: "form"}} do |t|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only= t(:actions)[:close]
        %h4.modal-title.text-center= t(:task_index)[:reschedule]
      .modal-body
        .form-group
          = t.label "due_date", t(:task_index)[:due_date], class: "col-sm-4 control-label"
          .col-sm-7
            .input-group.date
              = t.text_field "due_date", {class: 'form-control', value: format_date(task.due_date)}
              %span.input-group-addon
                %span.glyphicon.glyphicon-calendar
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: t(:actions)[:save]}
