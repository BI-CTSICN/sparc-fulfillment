#study_schedule_buttons
  .row
    .col-sm-4.col-md-4.text-center
      =t(:protocol)[:study_schedule][:manage_arms]
      #manage_arms
        = select_tag 'arms', options_from_collection_for_select(protocol.arms, 'id' , 'name'), class: 'selectpicker', :'data-protocol_id' => protocol.id
        .btn.btn-success.btn-sm.glyphicon.glyphicon-plus#add_arm_button{title: t(:protocol)[:study_schedule][:add_arm], type: "button", aria: {label: "Add Arm"}, data: {toggle: "tooltip", animation: 'false'}}
        .btn.btn-danger.btn-sm.glyphicon.glyphicon-remove#remove_arm_button{title: t(:protocol)[:study_schedule][:remove_arm], type: "button", aria: {label: "Remove Arm"}, data: {toggle: "tooltip", animation: 'false'}}
        .btn.btn-warning.btn-sm.glyphicon.glyphicon-edit#edit_arm_button{title: t(:protocol)[:study_schedule][:edit_arm], type: "button", aria: {label: "Edit Arm"}, data: {toggle: "tooltip", animation: 'false'}}
    .col-sm-4.col-md-4.text-center
      =t(:protocol)[:study_schedule][:manage_visits]
      #manage_visit_groups
        = render partial: '/study_schedule/study_schedule_management/visit_groups_selectpicker', locals: {protocol: protocol}
    .col-sm-4.col-md-4.text-center
      =t(:protocol)[:study_schedule][:manage_services]
      #manage_services
        = select_tag 'services', options_from_collection_for_select(protocol.organization.inclusive_child_services(:per_participant), 'id', 'name'), class: 'selectpicker'
        .btn.btn-success.btn-sm.glyphicon.glyphicon-plus#add_service_button{title: t(:protocol)[:study_schedule][:add_service], type: "button", aria: {label: "Add Service"}, data: {toggle: "tooltip", animation: 'false'}}
        .btn.btn-danger.btn-sm.glyphicon.glyphicon-remove#remove_service_button{title: t(:protocol)[:study_schedule][:remove_service], type: "button", aria: {label: "Remove Service"}, data: {toggle: "tooltip", animation: 'false'}}
