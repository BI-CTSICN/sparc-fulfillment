.modal-dialog
  .modal-content
    = form_for line_item, {remote: true, html: {class: "form-horizontal", role: "form"}} do |form|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only= t(:actions)[:close]
        %h4.modal-title.text-center= header_text
      .modal-body
        #modal_errors
        .row
          .col-md-12
            = form.hidden_field :protocol_id
            .form-group
              = form.label "service", t(:study_level_activities)[:service], class: "col-sm-4 control-label"
              .col-sm-7
                = form.select "service_id", options_from_collection_for_select(Service.one_time_fees, 'id', 'name', line_item.service_id), {include_blank: true}, :class => 'form-control'
            .form-group
              = form.label "quantity_requested", t(:study_level_activities)[:qty_req], class: "col-sm-4 control-label"
              .col-sm-7= form.text_field "quantity_requested", {class: 'form-control'}
            .form-group
              = form.label "quantity_type", t(:study_level_activities)[:qty_type], class: "col-sm-4 control-label"
              .col-sm-7= form.text_field "quantity_type", {class: 'form-control'}
            .form-group
              = form.label "started_at", t(:study_level_activities)[:started], class: "col-sm-4 control-label "
              .col-sm-7
                = form.text_field "started_at", {class: 'form-control datetimepicker', id: 'date_started_field', value: format_date(line_item.started_at)}
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: t(:actions)[:save_li]}
