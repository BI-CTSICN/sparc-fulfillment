.modal-dialog.modal-lg
  .modal-content
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only= t(:actions)[:close]
      %h4.modal-title.text-center= t(:notes)[:index_header]
    .modal-body
      - if notes.any?
        .notes-index
          .notes-header.text-center
            .col-xs-3= t(:notes)[:user]
            .col-xs-2= t(:notes)[:date]
            .col-xs-7= t(:notes)[:comment]
          - notes.each do |note|
            .note
              .col-xs-3.name= note.user.full_name
              .col-xs-2.created-at= format_datetime(note.created_at)
              .col-xs-7.comment= note.comment
      -else
        .text-center= "This procedure has no notes."
    .modal-footer
      .center-block
        %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
