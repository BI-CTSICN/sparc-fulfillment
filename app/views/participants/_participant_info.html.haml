.row
  .col-md-12
    = hidden_field_tag :participant_id, participant.id
    .fixed-table-container
      %table.participant.details.custom_striped{id: "participant-info", data: {toggle: 'table', url: "/participants/#{participant.id}.json?protocol_id=#{protocol.id}"}}
        %thead
          %tr
            %th{data: {align: "left", field: "name"}}
              = t(:participant)[:full_name]
            %th{data: {align: "left", field: "mrn"}}
              = t(:participant)[:mrn]
            %th{data: {align: "left", field: "external_id"}}
              = t(:participant)[:id]
            %th{data: {align: "left", field: "arm_name"}}
              = t(:participant)[:arm]
            %th{data: {align: "left", field: "status"}}
              = t(:participant)[:status]
            %th{data: {align: "left", field: "protocol_id"}}
              = t(:appointment)[:protocol_id]
            %th{data: {class: "coordinators", align: "left", field: "coordinators"}}
              = t(:protocol)[:coordinators]
            %th{data: {class: "coordinators", align: "left", field: "recruitment_source"}}
              = t(:participant)[:recruitment_source]
            %th{data: {class: 'edit', align: "center", field: "edit", formatter: "editFormatter", width: "5"}}
              = t(:actions)[:edit]
