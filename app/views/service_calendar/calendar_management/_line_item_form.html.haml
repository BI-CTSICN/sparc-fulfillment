.modal-dialog
  .modal-content
    = form_tag(update_line_items_multiple_line_items_path, method: "put", class: "form-horizontal new_visit", remote: true) do
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only= t(:actions)[:close]
        %h4#line_item.modal-title.text-center= header_text
      .modal-body
        #line_item_modal_errors
        .row
          .col-md-12
            = hidden_field_tag :header_text, header_text
            = hidden_field_tag :calendar_tab, calendar_tab
            .form-group
              = label_tag "service_id", t(:services)[:name], class: "col-sm-4 control-label"
              .col-sm-7= select_tag "service_id", options_from_collection_for_select(protocol.organization.inclusive_child_services(:per_participant), 'id' , 'name', "#{selected_service}"), class: "form-control selectpicker"
            .form-group
              = label_tag "arm_ids", t(:arm)[:object], class: "col-sm-4 control-label"
              .col-sm-7
                - protocol.arms.each do |arm|
                  .checkbox.arm-checkbox{id: "arm_#{arm.id}_checkbox"}
                    %label
                      = check_box_tag "arm_ids[]", [arm.id, page_hash[arm.id.to_s].to_i]
                      = arm.name
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: button_text}
