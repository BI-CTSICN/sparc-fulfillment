.modal-dialog
  .modal-content
    = form_for line_item, {remote: true, url: "/service_calendar/update_service", html: {class: "form-horizontal", role: "form", method: "post"}} do |p|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only= t(:actions)[:close]
        %h4.modal-title.text-center= t(:line_item)[:change_service]
      .modal-body
        .row
          .col-md-12
            .form-group{style: "padding: 0px 100px 0px 100px;"}
              = p.hidden_field :id
              = p.label "service", t(:line_item)[:service], class: "col-sm-4 control-label"
              .col-sm-7= p.select "service_id", options_from_collection_for_select(Service.all_services, "id", "name", line_item.service_id), {}, :class => "form-control"
      .modal-footer
        .center-block{style: "width: 205px;"}
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: t(:actions)[:save]}