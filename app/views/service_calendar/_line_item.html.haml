.row.line_item{id: "line_item_#{line_item.id}"}
  .col-md-3= select_tag "line_item_select_#{line_item.id}", options_for_select(['testing', 'wooo', line_item.name], line_item.name), class: "form-control"
  .col-md-1.text-center= line_item.subject_count
  .col-md-1.text-center
    .glyphicon.check_row.btn.btn-primary{:'data-line_item_id' => "#{line_item.id}", check: "#{set_check(line_item)}", class: "#{glyph_class(line_item)}"}
  %div{class: "visits_for_#{line_item.id}"}
    = render partial: '/service_calendar/visits', locals: {line_item: line_item, page: page}
  .col-md-1.text-center
    .btn.btn-danger.glyphicon.glyphicon-remove.remove_line_item{:'data-line_item_id' => "#{line_item.id}"}
