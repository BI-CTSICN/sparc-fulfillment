#incomplete_all_modal.modal-dialog
  .modal-content{data:{core_id: core_id}}
    .modal-header
      %button.close.close_modal{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only
          = t(:actions)[:close]
      %h4.modal-title.text-center
        = t(:notes)[:new_header]
    = form_tag incomplete_all_multiple_procedures_path, method: 'put', remote: true, class: "form-horizontal", role: "form" do
      .modal-body
        #modal_errors
        = hidden_field_tag :status, value: "incomplete"
        = hidden_field_tag :core_id, value: core_id
        = hidden_field_tag :kind, value: note.kind
        .form-group
          = label_tag "reason", t(:notes)[:reason], class: "col-sm-3 control-label"
          .col-sm-8
            = select_tag "reason", options_for_select(Procedure::NOTABLE_REASONS), prompt: "Select a reason", class: "form-control reason-select"
        .form-group
          = label_tag "comment", t(:notes)[:comment], class: "col-sm-3 control-label"
          .col-sm-8
            = text_area_tag :comment, nil, class: 'form-control', rows: "6"
      .modal-footer
        .center-block
          %button.btn.btn-default.cancel.close_modal{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %button.btn.btn-primary.save{type: 'submit'}
            = t(:actions)[:save]
