%h3 Participant List
#custom-toolbar
  = link_to 'Create New Participant', new_protocol_participant_path(protocol_id: protocol.id), {class: 'btn btn-default btn-primary', id: 'new_participant_button', type: 'button', data: {toggle: 'modal', target: '#participantModal'}, remote: true}
%table{id: "participants-table", data: {toggle: 'table', search: "true", toolbar: '#custom-toolbar',  url: "/protocols/#{protocol.id}/participants.json", striped: "true", height: "400", sort: {name: 'last_name', order: 'asc'}, show: {columns: "true", refresh: "true", toggle: "true"}, select: {item: {name: "toolbar1"}}}}
  %thead
    %tr
      %th{data: {align: "left", sortable: "true", formatter: "nameFormatter", field: "last_name"}} Last Name
      %th{data: {align: "left", sortable: "true", formatter: "nameFormatter", field: "first_name"}} First Name
      %th{data: {align: "left", sortable: "true", field: "mrn"}} MRN
      %th{data: {align: "left", sortable: "true", field: "status"}} Patient Status
      %th{data: {align: "left", sortable: "true", field: "date_of_birth"}} Date of Birth
      %th{data: {align: "left", sortable: "true", field: "gender"}} Gender
      %th{data: {align: "left", sortable: "true", field: "race"}} Race
      %th{data: {align: "left", sortable: "true", field: "ethnicity"}} Ethnicity
      %th{data: {align: "center", formatter: "editFormatter", field: "edit", events: "operateEvents", width: "5"}} Edit
      %th{data: {align: "center", formatter: "deleteFormatter", field: "delete", events: "operateEvents", width: "5"}} Delete

.modal.fade#participantModal{tabindex: '-1', role: 'dialog', aria: {labelledby: "CreateNewParticipant", hidden: 'true'}}
  #modalPlace