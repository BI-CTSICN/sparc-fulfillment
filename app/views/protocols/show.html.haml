= render partial: 'protocol', locals: { protocol: @protocol }

%div{role: 'tabpanel'}
  %ul.nav.nav-tabs.nav-justified{role: 'tablist'}
    %li.active.custom-tab{role: 'presentation'}= link_to t(:protocol_tabs)[:study_schedule], "#study_schedule", {"data-toggle" => 'tab', role: 'tab', "aria-controls" => 'study_schedule'}
    %li.custom-tab{role: 'presentation'}= link_to t(:protocol_tabs)[:participant_list], "#participant_list", {"data-toggle" => 'tab', role: 'tab', "aria-controls" => 'participant_list'}
    %li.custom-tab{role: 'presentation'}= link_to t(:protocol_tabs)[:participant_tracker], "#participant_tracker", {"data-toggle" => 'tab', role: 'tab', "aria-controls" => 'participant_tracker'}
    %li.custom-tab{role: 'presentation'}= link_to t(:protocol_tabs)[:study_level_charges], "#study_level_charges", {"data-toggle" => 'tab', role: 'tab', "aria-controls" => 'study_level_charges'}
    %li.custom-tab{role: 'presentation'}= link_to t(:protocol_tabs)[:audit_reporting], "#audit_reporting", {"data-toggle" => 'tab', role: 'tab', "aria-controls" => 'audit_reporting'}

  .tab-content
    .tab-pane.active#study_schedule{role: 'tabpanel'}
      = render :partial => 'protocols/study_schedule/schedule_edit_buttons', locals: {protocol: @protocol, selected_arm: @selected_arm, services: @services, selected_visit_group: @selected_visit_group}
      = render :partial => 'protocols/study_schedule/calendar', locals: {protocol: @protocol, page: @page}
    .tab-pane#participant_list{role: 'tabpanel'}
      = render partial: 'participant_list', locals: {protocol: @protocol, participant: @participant}

    .tab-pane#participant_tracker{role: 'tabpanel'}
      = render partial: 'participant_tracker', locals: {protocol: @protocol}

    .tab-pane#study_level_charges{role: 'tabpanel'}
      = render 'study_level_charges'

    .tab-pane#audit_reporting{role: 'tabpanel'}
      = render 'audit_reporting'
