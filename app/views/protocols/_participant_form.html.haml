.modal-dialog
  .modal-content
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only= t(:actions)[:close]
      %h4.modal-title#CreateNewParticipant= header_text
    .modal-body
      = form_for [protocol, participant], {remote: true} do |p|
        .row
          .col-md-3
            = p.label "last_name", t(:participant)[:last_name]
          .col-md-6
            = p.text_field "last_name", {class: 'form-control'}
        .row
          .col-md-3
            = p.label "first_name", t(:participant)[:first_name]
          .col-md-6
            = p.text_field "first_name", {class: 'form-control'}
        .row
          .col-md-3
            = p.label "mrn", t(:participant)[:mrn]
          .col-md-6
            = p.text_field "mrn", {class: 'form-control'}
        .row
          .col-md-3
            = p.label "status", t(:participant)[:status]
          .col-md-6
            = p.select "status", Participant.status_options, {include_blank: true}
        .row
          .col-md-3
            = p.label "date_of_birth", t(:participant)[:dob]
          .col-md-6
            = p.text_field "date_of_birth", {class: 'form-control'}
        .row
          .col-md-3
            = p.label "gender", t(:participant)[:gender]
          .col-md-6
            = p.select "gender", Participant.gender_options, {include_blank: true}
        .row
          .col-md-3
            = p.label "ethnicity", t(:participant)[:ethnicity]
          .col-md-6
            = p.select "ethnicity", Participant.ethnicity_options, {include_blank: true}
        .row
          .col-md-3
            = p.label "race", t(:participant)[:race]
          .col-md-6
            = p.select "race", Participant.race_options, {include_blank: true}
        .row
          .col-md-3
            = p.label "address", t(:participant)[:address]
          .col-md-6
            = p.text_field "address", {class: 'form-control'}
        .row
          .col-md-3
            = p.label "phone", t(:participant)[:phone]
          .col-md-6
            = p.text_field "phone", {class: 'form-control'}
        .modal-footer
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: "Save Participant"}