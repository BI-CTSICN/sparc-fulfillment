.modal-dialog
  .modal-content
    = form_for [arm.protocol, arm, visit_group], {remote: true, html: {class: "form-horizontal new_visit", role: "form"}} do |a|
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only= t(:actions)[:close]
        %h4#CreateNewParticipant.modal-title.text-center= "Add visit to #{arm.name}"
      .modal-body
        #visit_group_modal_errors
        .row
          = hidden_field_tag :current_page, current_page
          = hidden_field_tag :calendar_tab, calendar_tab
          .col-md-12
            = a.hidden_field :arm_id
            .form-group
              = a.label "name", t(:visit_groups)[:name], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "name", {class: 'form-control'}
            .form-group
              = a.label "day", t(:visit_groups)[:day], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "day", {class: 'form-control'}
            .form-group
              = a.label "position", t(:visit_groups)[:position], class: "col-sm-4 control-label"
              .col-sm-7= a.select "position", options_from_collection_for_select(arm.visit_groups, 'position', 'insertion_name'), {include_blank: 'add as last'}, :class => "form-control"
            .form-group
              = a.label "window_before", t(:visit_groups)[:window_before], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "window_before", {class: 'form-control'}
            .form-group
              = a.label "window_after", t(:visit_groups)[:window_after], class: "col-sm-4 control-label"
              .col-sm-7= a.text_field "window_after", {class: 'form-control'}
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
          %input.btn.btn-primary{type: 'submit', value: 'Add'}
