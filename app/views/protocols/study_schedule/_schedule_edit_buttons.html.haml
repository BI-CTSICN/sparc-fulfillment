#study_schedule_buttons
  .row
    .col-sm-4.col-md-4.text-center
      / =t(:study_schedule_tab)[:buttons][:arm]
      / .btn.btn-success.glyphicon.glyphicon-plus#add_arm_button
      / .btn.btn-danger.glyphicon.glyphicon-remove#remove_arm_button
      / .btn.btn-warning.glyphicon.glyphicon-edit#edit_arm
      / %div
      /   = select_tag 'arms', options_from_collection_for_select(protocol.arms, 'id' , 'name'), class: 'selectpicker', :'data-protocol_id' => protocol.id
      #manage_arms
        = link_to "Manage Arms", '#', {class: 'btn btn-default btn-primary', id: 'manage_arms', type: 'button', data: {protocol_id: protocol.id}, remote: true}

    .col-sm-4.col-md-4.text-center
      / =t(:study_schedule_tab)[:buttons][:visit]
      / .btn.btn-success.glyphicon.glyphicon-plus#add_visit_button
      / .btn.btn-danger.glyphicon.glyphicon-remove#remove_visit_button
      / .btn.btn-warning.glyphicon.glyphicon-edit#edit_visit
      / %div
      /   %select.selectpicker#visits
      %button.btn.btn-primary#manage_visits
        = "Manage Visits"

    .col-sm-4.col-md-4.text-center
      / =t(:study_schedule_tab)[:buttons][:services]
      / .btn.btn-success.glyphicon.glyphicon-plus#add_service_button
      / .btn.btn-danger.glyphicon.glyphicon-remove#remove_service_button
      / %div
      /   = select_tag 'services', options_from_collection_for_select(services, 'id', 'name'), class: 'selectpicker'
      %button.btn.btn-primary#manage_services
        = "Manage Services"
