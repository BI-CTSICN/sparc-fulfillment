#study_schedule_buttons
  .row
    .col-sm-4.col-md-4.text-center
      =t(:study_schedule_tab)[:buttons][:arm]
      %div
        = select_tag 'arms', options_from_collection_for_select(protocol.arms, 'id' , 'name'), class: 'selectpicker', :'data-protocol_id' => protocol.id
        .btn.btn-success.btn-sm.glyphicon.glyphicon-plus#add_arm_button
        .btn.btn-danger.btn-sm.glyphicon.glyphicon-remove#remove_arm_button
        .btn.btn-warning.btn-sm.glyphicon.glyphicon-edit#edit_arm_button
    .col-sm-4.col-md-4.text-center
      =t(:study_schedule_tab)[:buttons][:visit]
      %div
        %select.selectpicker#visits
          -protocol.arms.each do |arm|
            %option{disabled: true, style: 'font-weight:bold'}= arm.name
            = options_from_collection_for_select(arm.visit_groups,'id','name')
        .btn.btn-success.btn-sm.glyphicon.glyphicon-plus#add_visit_group_button
        .btn.btn-danger.btn-sm.glyphicon.glyphicon-remove#remove_visit_group_button
        .btn.btn-warning.btn-sm.glyphicon.glyphicon-edit#edit_visit_group_button

    .col-sm-4.col-md-4.text-center
      =t(:study_schedule_tab)[:buttons][:services]
      %div
        = select_tag 'services', options_from_collection_for_select(services, 'id', 'name'), class: 'selectpicker'
        .btn.btn-success.btn-sm.glyphicon.glyphicon-plus#add_service_button
        .btn.btn-danger.btn-sm.glyphicon.glyphicon-remove#remove_service_button
