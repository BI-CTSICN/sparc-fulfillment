#study_schedule_buttons
  .row
    .col-sm-4.col-md-4.text-center
      =t(:study_schedule_tab)[:buttons][:arm]
      = link_to '', new_protocol_arm_path(protocol), {class: 'btn btn-success glyphicon glyphicon-plus ', id: 'add_arm_button', type: 'button',"data-toggle" => 'modal', "data-target" => '#modal_place', remote: true}
      = link_to '', '#', {class: 'btn btn-danger glyphicon glyphicon-remove ', id: 'remove_arm_button', type: 'button'}

      %div
        = select_tag 'arms', options_from_collection_for_select(protocol.arms, 'id' , 'name'), class: 'selectpicker', :'data-protocol_id' => protocol.id
    .col-sm-4.col-md-4.text-center
      =t(:study_schedule_tab)[:buttons][:visit]
      = link_to '', '#', {class: 'btn btn-success glyphicon glyphicon-plus ', id: 'add_visit_button', type: 'button',"data-toggle" => 'modal', "data-target" => '#modal_place'}
      = link_to '', '#', {class: 'btn btn-danger glyphicon glyphicon-remove ', id: 'remove_visit_button', type: 'button'}
      %div
        %select.selectpicker#visits
    .col-sm-4.col-md-4.text-center
      =t(:study_schedule_tab)[:buttons][:services]
      = link_to '', '#', {class: 'btn btn-success glyphicon glyphicon-plus ', id: 'add_service_button', type: 'button', "data-toggle" => 'modal', "data-target" => '#modal_place'}
      = link_to '', '#', {class: 'btn btn-danger glyphicon glyphicon-remove ', id: 'remove_service_button', type: 'button', "data-toggle" => 'modal', "data-target" => '#modal_place'}
      %div
        = select_tag 'services', options_from_collection_for_select(services, 'id', 'name'), class: 'selectpicker'