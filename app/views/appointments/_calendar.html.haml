.col-xs-12
  .row.appointment{data: {id: appointment.id}}
    .col-xs-12
      .row
        .col-xs-12
          .page-header
            %h3.appointment_header
              = "Visit: #{appointment.name}"
              \-
              %button.btn.btn-primary.note.new{type: "button", aria: {label: "New Note"}, data: {notable_id: appointment.id, notable_type: "Appointment"}}
                %span.glyphicon.glyphicon-plus{aria: {hidden: "true"}}
              %button.btn.btn-primary.notes.list{type: "button", aria: {label: "Notes List"}, data: {notable_id: appointment.id, notable_type: "Appointment"}}
                %span.glyphicon.glyphicon-list-alt{aria: {hidden: "true"}}
            .row
              .col-md-6
                %label Visit Contents:
                %select#appointment_content_indications.selectpicker{title: "Select if Applicable"}
                  %option{value: ""} Select if Applicable
                  %option{value: "Lab Only"} Lab Only
                  %option{value: "Space Only"} Space Only
              .col-md-6
                = render partial: 'visit_indications_dropdown'
      .row
        = render partial: 'start_complete_buttons', locals: {appointment: appointment}
      .row.calendar
        .col-xs-12
          %table.table.table-bordered.table-hover.cores
            %thead
              %tr
                %th.name
                  = t(:procedure)[:procedure]
                %th.r-t
                  = t(:procedure)[:r_t]
                %th.status
                  = t(:procedure)[:status]
                %th.followup
                  = t(:procedure)[:followup]
                %th.completed-date
                  = t(:procedure)[:completed_date]
                %th.notes
                  = t(:procedure)[:notes]
                %th.remove
                  = t(:procedure)[:remove]
            %tbody
              - appointment.procedures_grouped_by_core.each do |core_id, procedures|
                = render partial: "core", locals: {core_id: core_id, procedures: procedures}
      .row.services
        .col-xs-4
          = select_tag "service_list", options_from_collection_for_select(Service.all_per_participant_visit_services, "id", "name"), class: 'form-control'
        .col-xs-2
          = text_field_tag "service_quantity", 1, class: "form-control"
        .col-xs-2
          %button.btn.btn-success.add_service
            = t(:appointment)[:add_service]
