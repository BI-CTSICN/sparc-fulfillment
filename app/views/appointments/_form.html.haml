.modal-dialog
  .modal-content
    = form_for appointment, {remote: true, html: {class: "form-horizontal", role: "form"}} do |form|
      = form.hidden_field :participant_id
      = form.hidden_field :arm_id
      .modal-header
        %button.close{type: 'button', data: {dismiss: 'modal'}}
          %span{aria: {hidden:'true'}} &times;
          %span.sr-only
            = t(:actions)[:close]
        %h4.modal-title.text-center
          = t(:appointment)[:edit_header]
      .modal-body
        #appointment_modal_errors
        .form-group
          = form.label "name", t(:appointment)[:name], class: "col-sm-3 control-label"
          .col-sm-8
            = form.text_field :name, {class: 'form-control'}
        .form-group
          = form.label "position", t(:appointment)[:position], class: "col-sm-3 control-label"
          .col-sm-8= form.select "position", options_from_collection_for_select(appointment.arm.appointments.where(participant_id: appointment.participant_id), 'position', 'insertion_name'), {include_blank: 'add as last'}, :class => "form-control"
      .modal-footer
        .center-block
          %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}
            = t(:actions)[:close]
          %button.btn.btn-primary{type: 'submit'}=t(:actions)[:save]
