- if procedure.task.present?
  .input-group.date.followup{id: dom_id(procedure)}
    %input{type: "text", class: "form-control", value: format_date(procedure.task.due_at), id: "follow_up_datepicker_#{procedure.id}"}
    %span.input-group-addon
      %span.glyphicon.glyphicon-calendar
- else
  -# div used for capturing click events when button is disabled
  .btn-group{class: "#{ procedure.appt_started? ? '' : 'pre_start_disabled' }"}
    %button.btn.btn-warning.followup.new{type: "button", class: "#{ procedure.appt_started? ? '' : 'disabled' }", aria: {label: "New Followup"}}
      %span.glyphicon.glyphicon-calendar{aria: {hidden: "true"}}
