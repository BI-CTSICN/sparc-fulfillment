- if procedure.task.present?
  .input-group.date.followup{id: dom_id(procedure)}
    %input{type: "text", class: "form-control", value: format_date(procedure.task.due_at), id: "follow_up_datepicker"}
    %span.input-group-addon
      %span.glyphicon.glyphicon-calendar
- else
  %button.btn.btn-warning.followup.new{type: "button", aria: {label: "New Followup"}}
    %span.glyphicon.glyphicon-calendar{aria: {hidden: "true"}}
